{
    "logging": {
        "slack_channel": "#botlog",
        "debug": true,
        "title": "test",
        "description": "for validation",
        "trial": 1,
        "reproducible": true
    },

    "augmentation": {
        "size": [224, 224],
        "train": [
            { "category": "All", "type": "HFlip" },
            { "category": "All", "type": "VFlip" },
            { "category": "All", "type": "Rotate", 
                "param": { "degrees": [-40, 40] }}
        ],
        "val": []
    },

    "dataset": {
        "data-dir": "../data/Stat-DataSet.csv",
        "name": "SecondSet-20180505010809-9-mini",
        "filter": {
            "train": [
                "train"
            ],
            "val": [
                "val"
            ]
        }
    },

    "model": {
        "type": "UNET",
        "param": {
            "bilinear": false,
            "unit": 4
        }
    },

    "evaluation": {
        "loss": {
            "segmentation": {
                "type": "DICE",
                "param": {}
            },
            "classification": {
                "type": "CE",
                "param": {}
            },
            "param": {}
        },

        "metrics": [
            { "type": "IOU", "param": {"threshold": 0.5} },
            { "type": "DICE", "param": {"threshold": 0.5} },
            { "type": "DICE", "param": {"threshold": 0.8} },
            { "type": "accuracy", "param": {"threshold": 0.5} }
        ]
    },

    "learning": {
        "checkpoint": null,
        "weight_init": "he_uniform",
        "hard_example_mining": false,
        "lr_schedule": {
            "type": "Step",
            "param": {
                "step_size": 130, 
                "gamma": 0.1
            }
        },
        "optimizer": {
            "type": "SGD",
            "param": {
                "weight_decay": 1e-5,
                "lr": 1
            }
        },
        "emsemble": false
    },

    "training": {
        "epochs": 1,
        "batch_size": 10,
        "num_workers": 16,
        "log_freq": 1
    }
}