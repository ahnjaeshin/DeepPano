{
    "logging": {
        "slack_channel": "#botlog",
        "logdir": true,
        "title": "test",
        "start_time": "",
        "description": "for validation",
        "trial": 1,
        "reproducible": true
    },

    "augmentation": {
        "size": [64, 32],
        "train": [],
        "val": []
    },

    "dataset": {
        "data-dir": "../data/Stat-DataSet.csv",
        "name": "ThirdSet-10-mini",
        "filter": {
            "train": [ "train" ],
            "val": [ "val" ]
        }
    },

    "model": {
        "type": "UNET",
        "param": {
            "bilinear": false,
            "unit": 6
        }
    },

    "evaluation": {
        "loss": {
            "type": "DICE",
            "param": {}
        },

        "metrics": [
            { "type": "IOU", "param": {"threshold": 0.5, "mode": "both"} },
            { "type": "IOU", "param": {"threshold": 0.5, "mode": "major"} },
            { "type": "IOU", "param": {"threshold": 0.5, "mode": "minor"} },
            { "type": "DICE", "param": {"threshold": 0.5, "mode": "both"} },
            { "type": "DICE", "param": {"threshold": 0.5, "mode": "major"} },
            { "type": "DICE", "param": {"threshold": 0.5, "mode": "minor"} },
            { "type": "DICE", "param": {"threshold": 0.8} }
        ]
    },

    "learning": {
        "checkpoint": "None",
        "weight_init": "he_uniform",
        "hard_example_mining": false,
        "lr_schedule": {
            "type": "Step",
            "param": {
                "step_size": 50, 
                "gamma": 0.1
            }
        },
        "optimizer": {
            "type": "SGD",
            "param": {
                "weight_decay": 1e-5,
                "lr": 0.01
            }
        },
        "emsemble": false
    },

    "training": {
        "epochs": 2,
        "batch_size": 10,
        "num_workers": 16,
        "log_freq": 10
    }
}