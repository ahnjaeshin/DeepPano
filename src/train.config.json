{
    "logging": {
        "logdir": true,
        "title": "tiramisu2",
        "start_time": "",
        "description": "for validation",
        "trial": 4,
        "reproducible": true
    },

    "augmentation": {
        "size": [64, 32],
        "train": [],
        "val": [

        ]
    },

    "dataset": {
        "pretrain": false,
        "data-dir": "../data/Stat-DataSet.csv",
        "name": "ThirdSet-10-mini",
        "filter": {
            "train": [ "train" ],
            "val": [ "val" ]
        }
    },

    "model": {
        "type": "RecurNet",
        "param": {

        }
    },

    "evaluation": {
        "loss": {
            "type": "DICE",
            "param": {
            }
        },

        "metrics": [
            { "type": "DICE", "param": {"threshold": 0.5, "mode": "both"} },
            { "type": "DICE", "param": {"threshold": 0.5, "mode": "major"} },
            { "type": "DICE", "param": {"threshold": 0.5, "mode": "minor"} },
            { "type": "accuracy", "param": {"threshold": 0.5, "mode": "both"} },
            { "type": "f1", "param": {"threshold": 0.5, "mode": "major"} },
            { "type": "f1", "param": {"threshold": 0.5, "mode": "minor"} }
        ]
    },

    "learning": {
        "checkpoint": "",
        "weight_init": "he_uniform",
        "hard_example_mining": false,
        "lr_schedule": {
            "type": "Step",
            "param": {
                "step_size": 50, 
                "gamma": 0.1
            }
        },
        "optimizer": {
            "type": "SGD",
            "param": {
                "weight_decay": 1e-5,
                "lr": 1
            }
        },
        "emsemble": false
    },

    "training": {
        "epochs": 300,
        "batch_size": 10,
        "num_workers": 16,
        "log_freq": 20
    }
}