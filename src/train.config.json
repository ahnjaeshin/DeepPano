{
    "experiment": {
        "reproducible": true
    },

    "logging": {
        "log": true,
        "title": "none"
    },

    "augmentation": {
        "channel": 2,
        "size": [64, 32],
        "train": [
            { "category": "All", "type": "Crop", "param": {"size": [512, 256], "pad_if_needed": true} }
        ],
        "val": [

        ]
    },

    "dataset": {
        "pretrain": false,
        "data-dir": "../data/Stat-DataSet.csv",
        "name": "ThirdSet-10-mini",
        "filter": {
            "train": [ "train" ],
            "val": [ "val" ]
        }
    },

    "model": {
        "category": "Vanilla",
        "param": {
            "module": {
                "type": "RecurNet2",
                "param": {
                    "channels": 2,
                    "classes": 2,
                    "unit": 4
                }
            },
            "weight_init": "he_uniform",
            "optimizer": {
                "type": "SGD",
                "param": {
                    "weight_decay": 1e-5,
                    "lr": 0.1,
                    "momentum": 0.9,
                    "nesterov": true
                }
            },
            "scheduler": {
                "type": "Step",
                "param": {
                    "step_size": 50, 
                    "gamma": 0.1
                }
            },
            "loss": {
                "type": "DICE",
                "param": {
                    
                }
            },
            "ensemble": false
        }
    },

    "metric": [
        { "type": "DICE", "param": {"threshold": 0.5, "mode": "both"} },
        { "type": "DICE", "param": {"threshold": 0.5, "mode": "major"} },
        { "type": "DICE", "param": {"threshold": 0.5, "mode": "minor"} },
        { "type": "accuracy", "param": {"threshold": 0.5, "mode": "both"} },
        { "type": "f1", "param": {"threshold": 0.5, "mode": "major"} },
        { "type": "f1", "param": {"threshold": 0.5, "mode": "minor"} }
    ],

    "training": {
        "checkpoint": "/Users/ShinAhnjae/Desktop/3-1/CID/DeepPano/result/runs/1.pth.tar",
        "epochs": 3,
        "batch_size": 10,
        "num_workers": 16,
        "log_freq": 2
    }
}